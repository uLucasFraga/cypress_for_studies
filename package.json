{
  "name": "cypress-for-studies",
  "description": "reposit√≥rio de testes com o cypress + allure",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "yarn allure:clear && rm -rf node_modules/ yarn-error.log yarn.lock",
    "allure:clear": "rm -rf allure-results/ allure-report runner-results */screenshots */videos */parallel-weights* || true",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:history": "mv -f allure-report/history allure-results/history && rm -r allure-report || true",
    "allure:serve": "allure serve",
    "cy:open": "yarn cypress open --browser chrome --env allure=true",
    "cy:api": "yarn cypress run --spec cypress/e2e/api/*/*.api.cy.js --env allure=true",
    "cy:e2e": "yarn cypress run --spec cypress/e2e/ui/*/*.ui.cy.js --env allure=true",
    "cy:run": "yarn cypress run --spec cypress/e2e/ui/*/*.ui.cy.js --browser chrome --env allure=true",
    "lint": "yarn eslint cypress/ --fix",
    "test": "yarn allure:clear && yarn cy:run && yarn allure:report"
  },
  "private": true,
  "dependencies": {
    "cypress": "^10.3.1",
    "mocha": "^10.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@shelex/cypress-allure-plugin": "latest",
    "cypress-multi-reporters": "^1.6.1",
    "eslint": "^8.20.0",
    "eslint-plugin-cypress": "latest",
    "http-status-codes": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ulucasfraga/cypress_for_studies.git"
  },
  "author": "Lucas Fraga",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ulucasfraga/cypress_for_studies/issues"
  },
  "homepage": "https://github.com/ulucasfraga/cypress_for_studies#readme"
}
